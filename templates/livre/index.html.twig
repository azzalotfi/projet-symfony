{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des Livres</h1>
        <a href="{{ path('app_livre_new') }}" class="btn btn-success">Ajouter un livre</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>ISBN</th>
                    <th>Disponible</th>
                    <th>Auteur</th>
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.ISBN }}</td>
                    <td>
                        {% if livre.disponible %}
                            <span class="badge bg-success">Oui</span>
                        {% else %}
                            <span class="badge bg-danger">Non</span>
                        {% endif %}
                    </td>
                    <td>{{ livre.auteur.nom }}</td>
                    <td>{{ livre.genre.nom }}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-sm btn-info">Voir</a>
                            <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun livre trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
