{% extends 'base.html.twig' %}

{% block title %}Modifier le livre{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Modifier le livre</h1>
                <div>
                    <a href="{{ path('app_livre_index') }}" class="btn btn-secondary me-2">Retour à la liste</a>
                    <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-info">Voir les détails</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            {{ include('livre/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
        <div class="card-footer">
            {{ include('livre/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
